<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Show Alert Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_button1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/second_button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Show Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_button2"
            app:layout_constraintTop_toBottomOf="@+id/second_button1"
            app:layout_constraintBottom_toTopOf="@+id/second_button3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Show Time Picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_button3"
            app:layout_constraintTop_toBottomOf="@+id/second_button2"
            app:layout_constraintBottom_toTopOf="@+id/second_button4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Show Date Picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_button4"
            app:layout_constraintTop_toBottomOf="@+id/second_button3"
            app:layout_constraintBottom_toTopOf="@+id/second_button5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Show Bottom Shift Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_button5"
            app:layout_constraintTop_toBottomOf="@+id/second_button4"
            app:layout_constraintBottom_toTopOf="@+id/second_button6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Show Toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_button6"
            app:layout_constraintTop_toBottomOf="@+id/second_button5"
            app:layout_constraintBottom_toTopOf="@+id/second_button7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Show Snack Bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/second_button7"
            app:layout_constraintTop_toBottomOf="@+id/second_button6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              app:constraint_referenced_ids="second_button1,second_button2,second_button3,second_button4,second_button5,second_button6,second_button7"
                                              android:id="@+id/barrier2" app:barrierDirection="top"
                                              app:layout_constraintBottom_toBottomOf="parent"
                                              android:layout_marginBottom="731dp"
                                              app:layout_constraintStart_toStartOf="parent"
                                              android:layout_marginEnd="411dp"
                                              app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>